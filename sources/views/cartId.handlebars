<h1>Carrito de compras</h1>


<div class="container">
       <p id="cartId" data-cart-id="{{cart._id}}">Carrito número: {{cart._id}}</p>
        <ul class="list-group">
            {{#each cart.products}}
                <li class="list-group-item">
                    Código del producto: {{this._id}}, Cantidad: {{this.quantity}}
                    <form action="/mongoCarts/{{cart._id}}/products/{{this._id}}" method="POST" class="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit">Eliminar del carrito</button>
                    </form>
                </li>
            {{/each}}
        </ul>
    </div>





    </ul>
</div>


