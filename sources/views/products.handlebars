<div class="container">
      <div class="row">
      {{#each products}}
        <div class="col-md-4">
          <div class="card mb-3">
            <img src="{{this.thumbnails}}" alt="{{this.title}}" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.description}}</p>
              <p class="card-text">Precio: ${{this.price}}</p>
              <p class="card-text">Stock: {{this.stock}}</p>
              <p class="card-text">Categoría: {{this.category}}</p>
              <form action="/cartsMongo/1692745760670/products/{{this._id}}" method="POST">
  {{#if user}}
    <button class="btn btn-primary"  type="submit">Agregar al carrito</button>
  {{else}}
