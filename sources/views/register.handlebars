<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center">Registrar usuario</h2>
      <form id="registerForm">
        <div class="mb-3">
          <input type="text" class="form-control" name="first_name" placeholder="Nombre">
        </div>
        <div class="mb-3">
          <input type="text" class="form-control" name="last_name" placeholder="Apellido">
        </div>
        <div class="mb-3">
          <input type="number" class="form-control" name="age" placeholder="Edad">
        </div>
        <div class="mb-3">
          <input type="text" class="form-control" name="number" placeholder="Teléfono">
        </div>
        <div class="mb-3">
          <input type="email" class="form-control" name="email" placeholder="Correo Electrónico">
        </div>
        <div class="mb-3">
          <input type="password" class="form-control" name="password" placeholder="Contraseña">
        </div>
<div class="mb-3">
          <input type="text" class="form-control" name="role" placeholder="Rol">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Crear Usuario</button>
      </form>
      <span id="responseRegister" class="mt-3 d-block text-center"></span>
    </div>
  </div>
</div>


<script src="/js/register.js"></script>

